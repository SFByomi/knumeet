<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

   <TextView
       android:id="@+id/textView6"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:fontFamily="@font/mon_semibold"
       android:gravity="center"
       android:text="KNUMEET"
       android:textColor="@color/colorBlack"
       android:textSize="25sp"
       android:background="@drawable/rectangle_shape"
       android:elevation="10dp"
       app:layout_constraintTop_toTopOf="parent"
       tools:layout_editor_absoluteX="-16dp" />

   <ImageButton
       android:id="@+id/btn_go_select"
       android:layout_width="80dp"
       android:layout_height="80dp"


       android:layout_marginStart="80dp"
       android:layout_marginLeft="80dp"
       android:layout_marginTop="32dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView6" />

   <TextView
       android:id="@+id/textView7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/nanum_bold"
       android:text="새로 만들기"
       android:textColor="@color/colorBlack"
       android:textSize="14sp"
       app:layout_constraintEnd_toEndOf="@+id/btn_go_select"
       app:layout_constraintStart_toStartOf="@+id/btn_go_select"
       app:layout_constraintTop_toBottomOf="@+id/btn_go_select" />

   <ImageButton
       android:id="@+id/btn_go_enter"
       android:layout_width="80dp"
       android:layout_height="80dp"

       android:layout_marginTop="32dp"
       android:layout_marginEnd="80dp"
       android:layout_marginRight="80dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView6" />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/nanum_bold"

       android:textSize="14sp"
       android:text="입장"
       android:textColor="@color/colorBlack"
       app:layout_constraintEnd_toEndOf="@+id/btn_go_enter"
       app:layout_constraintStart_toStartOf="@+id/btn_go_enter"
       app:layout_constraintTop_toBottomOf="@+id/btn_go_enter" />

   <ListView
       android:layout_width="350dp"
       android:layout_height="470dp"
       android:layout_marginTop="40dp"
       android:background="@drawable/corner_shape"
       android:elevation="10dp"

       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.491"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>