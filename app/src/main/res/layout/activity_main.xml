<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

   <TextView
       android:id="@+id/textView6"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:fontFamily="@font/nanum_bold"
       android:gravity="bottom"
       android:paddingBottom="30dp"
       android:paddingLeft="30dp"
       android:text="만남계획"
       android:textColor="@color/colorWhite"
       android:textSize="35sp"
       android:background="@drawable/gradation_shape_main"
       android:elevation="10dp"
       app:layout_constraintTop_toTopOf="parent"
       tools:layout_editor_absoluteX="-16dp" />

   <ImageButton
       android:id="@+id/btn_go_select"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginStart="48dp"

       android:layout_marginLeft="48dp"

       android:background="@drawable/ic_baseline_add_24"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/btn_go_enter" />

   <TextView
       android:id="@+id/textView7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/nanum_regular"
       android:text="새로 만들기"
       android:layout_marginTop="8dp"
       android:textColor="@color/colorBlack"
       android:textSize="14sp"
       app:layout_constraintEnd_toEndOf="@+id/btn_go_select"
       app:layout_constraintStart_toStartOf="@+id/btn_go_select"
       app:layout_constraintTop_toBottomOf="@+id/btn_go_select" />


   <ImageButton
       android:id="@+id/btn_go_enter"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="36dp"

       android:background="@drawable/enter_png_754966"
       app:layout_constraintEnd_toStartOf="@+id/btn_logout"
       app:layout_constraintHorizontal_bias="0.496"
       app:layout_constraintStart_toEndOf="@+id/btn_go_select"
       app:layout_constraintTop_toBottomOf="@+id/textView6" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"

       android:fontFamily="@font/nanum_regular"
       android:text="입장하기"
       android:textColor="@color/colorBlack"
       android:textSize="14sp"
       app:layout_constraintEnd_toEndOf="@+id/btn_go_enter"
       app:layout_constraintHorizontal_bias="0.514"
       app:layout_constraintStart_toStartOf="@+id/btn_go_enter"
       app:layout_constraintTop_toBottomOf="@+id/btn_go_enter" />

   <ImageButton
       android:id="@+id/btn_logout"
       android:layout_width="80dp"
       android:layout_height="80dp"

       android:layout_marginEnd="28dp"
       android:layout_marginRight="28dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@+id/btn_go_enter" />

   <ListView

       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_marginTop="40dp"
       android:background="@drawable/corner_shape"
       android:elevation="10dp"
      android:layout_marginHorizontal="30dp"
       android:layout_marginBottom="20dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>