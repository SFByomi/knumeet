<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity"
    app:layout_constraintHorizontal_weight="2"
    android:padding="10dp"
    >

    <ImageButton
        android:id="@+id/btn_back_select_to_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_btn"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:background="@drawable/corner_shape"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:id="@+id/btn_Start_time"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/info"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="시작 시간:"
            android:textSize="20sp"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="00 : 00"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/corner_shape"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:id="@+id/btn_end_time"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/btn_Start_time"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="마감 시간:"
            android:textSize="20sp"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="23 : 59"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:background="@drawable/corner_shape"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_how_long"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="소요 시간 : "
                android:textSize="20sp"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/colorBlack"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1 시간"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/colorUnClicked"
                />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/corner_shape"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_how_many_people"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="인원: "
                android:textSize="20sp"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/colorBlack" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="2인"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/colorUnClicked" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/btn_end_time"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:background="@drawable/corner_shape"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_start_calendar_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10월 19일(목)"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/colorUnClicked" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/corner_shape"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_start_calendar_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10월 26일(목)"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/colorUnClicked" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/corner_shape"

        android:elevation="5dp"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_select_to_home"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="제목 :"
            android:textSize="20sp"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/colorBlack"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="제목을 입력하세요"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_go_makeinfo"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/corner_shape_blue"

        android:fontFamily="@font/nanum_bold"
        android:text="만들기"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>