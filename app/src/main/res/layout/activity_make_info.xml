<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".MakeInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="3"
        android:elevation="10dp"
        android:background="@drawable/rectangle_shape"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_back_info_to"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_baseline_arrow_back_ios_24" />
        </LinearLayout>

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:text="나의 시간"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nanum_bold"
            android:gravity="left|center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:elevation="10dp"
        android:background="@drawable/corner_shape"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="제목 : "
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_bold"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="응용프로그래밍2"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_regular"
                />
        </LinearLayout>
        <ImageView
            android:src="@drawable/line_shape"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="소요시간 : "
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_bold"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="1 시간"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_regular"
                />
        </LinearLayout>


        <ImageView
            android:src="@drawable/line_shape"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nanum_bold"
                android:gravity="center_vertical"
                android:text="시간 : "
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="오후 01:00 ~ 오후 05:00"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_regular"
                />
        </LinearLayout>

        <ImageView
            android:src="@drawable/line_shape"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="기간 : "
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_bold"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="2020/10/10 ~ 2020/10/19"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_regular"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="가능시간을 선택해주세요. (중복 선택)"
        android:fontFamily="@font/nanum_light"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:background="@drawable/corner_shape"
        android:elevation="3dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <ListView
            android:layout_marginVertical="12dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/corner_shape"
            />
        <ImageView
            android:src="@drawable/line_shape"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="30dp"
            />
        <ListView
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:background="@drawable/corner_shape"
            />

    </LinearLayout>
    <Button
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/corner_shape_point"
        android:layout_gravity="center"
        android:text="완료"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/nanum_bold"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        />


</LinearLayout>