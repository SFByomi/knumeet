<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectCalendarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/btn_end_time"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:background="@drawable/corner_shape"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10월 19일(목)"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_regular"
                android:textColor="@color/colorUnClicked" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/corner_shape"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10월 26일(목)"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_regular"
                android:textColor="@color/colorUnClicked" />

        </LinearLayout>

    </LinearLayout>

    <com.wisnu.datetimerangepickerandroid.CalendarPickerView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>